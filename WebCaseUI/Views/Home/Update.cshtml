@model WebCaseUI.Models.Case

@{
    ViewBag.Title = "Update exiting Case";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Update", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group">
        <label for="id">Case name:</label>
       @* <input type="text" class="form-control" id="id" name="id" required="required">*@

    @if (ViewBag.Cases != null)
    {
        @Html.DropDownListFor(x => x.ID, new SelectList(ViewBag.Cases, "ID", "caseNumber"))
    }
    else
    {
        <input type="text" class="form-control" id="id" name="id" required="required">
    }
    </div>
   
    <div class="form-group">
        <label for="attachment">Attachment:</label>
        <input type="file" class="form-control" id="file" name="file" required="required">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>

}

<h2>@ViewBag.Message</h2>